<%- include("./partials/header") -%>
    
    <div class="d-inline-flex p-2 carta w-100">
        <% if(pokemon.id > 1) {%> <a href="/pn/<%= pokemon.id - 1 %>" class = "boton d-flex justify-content-center h-100"><i class="fa-solid fa-left-long fa-4x"></i></a>
        <%} else {%><a href="/pn/1025" class = "boton d-flex justify-content-center h-100"><i class="fa-solid fa-left-long fa-4x"></i></a><% } %>
        <div class="d-flex flex-column justify-content-center w-50 mx-auto text-center">
            <div class="imagen">
                <% if(pokemon.sprite) {%><img src="<%= pokemon.sprite  %>" alt= "<%= pokemon.name %>" class="imgPokemon"><%}else {%>
                    <img src="./img/pokemon.png" alt= "<%= pokemon.name %>" class="imgPokemon"><%}  %>
            </div>
            <hr>
            <h1><%= pokemon.name  %></h1>
            <div class="d-inline-flex justify-content-evenly my-5">
                <% pokemon.types.forEach((element)=>{ %>
                    <h3 class="pokemon-<%= element.type.name %> type"><%= element.type.name.charAt(0).toUpperCase() + element.type.name.slice(1) %></h3>
                <% }) %>
            </div>
            <div class="d-inline-flex justify-content-evenly my-5">
                <div>
                    <h2>Weight</h2>
                    <h3> <%= pokemon.w %> KG</h3>
                </div>
                <div>
                    <h2>Height</h2>
                    <h3> <%= pokemon.h %> M</h3>
                </div>
            </div>
            
            <h2>Base Stats</h2>
            <ul class="list-group">
                <% pokemon.stats.forEach((element)=>{ %>
                <li class="list-group-item d-flex justify-content-between my-2">
                    <div class="ms-2 me-2 text-dark">
                        <%= element.stat.name.charAt(0).toUpperCase() + element.stat.name.slice(1) %>
                    </div>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"><%= element.base_stat  %></span>
                </li>
                <%})  %>
            </ul>
            <div class="d-flex flex-column mb-1">
                <p class="d-inline-flex gap-1">
                    <button class="btn btn-primary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample0" aria-expanded="false" aria-controls="collapseExample">
                      Moves
                    </button>
                </p>
                <div class="collapse" id="collapseExample0">
                    <div class="card card-body my-1">
                        <ul class="list-group list-group-flush">
                        <% pokemon.moves.forEach((element)=>{ %>
                            <li class="text-dark list-group-item"><%= element.move.name.charAt(0).toUpperCase() + element.move.name.slice(1) %></li>
                        <%})  %> 
                        </ul> 
                    </div>
                </div>
                <p class="d-inline-flex gap-1">
                    <button class="btn btn-primary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample">
                      Abilities
                    </button>
                </p>
                <div class="collapse" id="collapseExample1">
                    <div class="card card-body my-3 ">
                        <ul class="list-group list-group-flush">
                            <% pokemon.abilities.forEach((element)=>{ %>
                                <li class="text-dark list-group-item"><%= element.ability.name.charAt(0).toUpperCase() + element.ability.name.slice(1) %></li>
                            <%})  %> 
                            </ul> 
                    </div>
                </div>
            </div>
        </div>
        <% if(pokemon.id < 1025) {%> <a href="/pn/<%= pokemon.id + 1 %>" class = "boton d-flex justify-content-center h-100 fa-4x"><i class="fa-solid fa-right-long"></i></a>
        <%} else {%><a href="/pn/1" class = "boton d-flex justify-content-center h-100"><i class="fa-solid fa-right-long fa-4x"></i></a><%}  %>
    </div>
<%- include("./partials/footer") -%>